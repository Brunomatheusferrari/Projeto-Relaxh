{
    "openapi": "3.0.0",
    "info": {
      "version": "1.0.0", 
      "title": "Todo APP",
      "description": "REST API para um TODO APP"
    },
    "servers": [
        {
            "url": "http://localhost:3001",
            "description": "Servidor de desenvolvimento"
        }
    ],
    "tags": [
      {
        "name": "Users",
        "description": "Endpoints de Usuários"
      },
      {
          "name": "Hotel",
          "description": "Endpoints do Hotel"
      },
      {
          "name": "Auth",
          "description": "Endpoints de Autenticação"
      }
    ],
    "components": {
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "ID do usuário"                                            
                    },
                    "nome": {
                        "type": "string",
                        "description": "Nome do usuário"                                            
                    },
                    "email": {
                        "type": "string",
                        "description": "E-mail do usuário"                                            
                    },                                
                    "role": {
                        "type": "string",
                        "description": "Role do usuário"                                            
                    }, 
                    "createdAt": {
                        "type": "string",
                        "description": "Data de criação"                                            
                    },
                    "updatedAt": {
                        "type": "string",
                        "description": "Data de atualização"
                    }
                }
            }
        }           
    },
    "paths": {
        "/users/create": {
            "post": {
                "tags": ["Users"],
                "summary": "Cria um usuário",
                "requestBody": {
                    "description": "Usuário a ser criado",
                    "required": true,
                    "content": {
                        "aplication/json": {                            
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nome": {
                                        "type": "string",
                                        "description": "Nome do usuário"                                        
                                    },
                                    "email": {
                                        "type": "string",
                                        "description": "Email do usuário"                                            
                                    },
                                    "password": {
                                        "type": "string",
                                        "description": "Senha do usuário"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "aplication/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "description": "ID do usuário"                                            
                                        },
                                        "role": {
                                            "type": "string",
                                            "description": "Role do usuário"
                                        },
                                        "nome": {
                                            "type": "string",
                                            "description": "Nome do usuário"                                            
                                        },
                                        "email": {
                                            "type": "string",
                                            "description": "Email do usuário"                                            
                                        },
                                        "updatedAt": {
                                            "type": "string",
                                            "description": "Data de atualização"
                                        },
                                        "createdAt": {
                                            "type": "string",
                                            "description": "Data de criação"                                            
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "E-mail já cadastrado."                    
                    },
                    "500":{
                        "description": "E-mail Inválido"
                    }
                }
            }
        },
        "/users/": {
            "get": {
                "tags": ["Users"],
                "summary": "Pegue informações do usuário a partir do id",
                "requestBody": {
                    "description": "Informações do Usuário",
                    "required": true,
                    "content": {
                        "aplication/json": {                            
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string",
                                        "description": "Id do usuário"                                        
                                    }
                                }
                            }
                        }
                    }
                },                
                "responses": {
                    "201": {
                        "description": "OK",
                        "content": {
                            "aplication/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User" 
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Não há quarto Disponíveis"                    
                    }
                }
            }
        },
        "/users/edit": {
            "put": {
                "tags": ["Users"],
                "summary": "Editar info do Usuário",
                "requestBody": {
                    "description": "Editar",
                    "required": true,
                    "content": {
                        "aplication/json": {                            
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string",
                                        "description": "Id do usuário"                                        
                                    },
                                    "nome": {
                                        "type": "string",
                                        "description": "Novo nome do usuário"                                        
                                    }
                                }
                            }
                        }
                    }
                },                
                "responses": {
                    "201": {
                        "description": "OK",
                        "content": {
                            "aplication/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User" 
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Usuário não encontrado"                    
                    }
                }
            }
        },
        "/users/delete": {
            "delete": {
                "tags": ["Users"],
                "summary": "Deletar Usuário",
                "requestBody": {
                    "description": "Deletar",
                    "required": true,
                    "content": {
                        "aplication/json": {                            
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string",
                                        "description": "Id do usuário"                                        
                                    }
                                }
                            }
                        }
                    }
                },                
                "responses": {
                    "204": {
                        "description": "OK"
                    },
                    "404": {
                        "description": "Usuário não encontrado"                    
                    }
                }
            }
        },
        "/users/reserve": {
            "post": {
                "tags": ["Users"],
                "summary": "Reserva uma vaga no Hotel",
                "requestBody": {
                    "description": "Informações da Reserva",
                    "required": true,
                    "content": {
                        "aplication/json": {                            
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "description": "E-mail do usuário"                                        
                                    },
                                    "tipo_quarto": {
                                        "type": "string",
                                        "description": "Tipo do quarto a ser reservado (ex:Standart, Premium, Deluxe)"                                            
                                    },
                                    "data_entrada": {
                                        "type": "string",
                                        "description": "Data de entrada (timestamp)"
                                    },
                                    "data_saida": {
                                        "type": "string",
                                        "description": "Data de saída (timestamp)"
                                    }
                                }
                            }
                        }
                    }
                },                
                "responses": {
                    "201": {
                        "description": "OK",
                        "content": {
                            "aplication/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "description": "Token de Check-in"                                            
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Não há quarto Disponíveis"                    
                    }
                }
            }     
        },
        "/auth/login": {
            "post": {                
                "tags": ["Auth"],
                "summary": "Recebe o access-token e o refresh-toen do usuário ",
                "requestBody": {
                    "description": "As informações de login do usuário",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {                                
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "description": "Email do usuário"                                            
                                    },
                                    "password": {
                                        "type": "string",
                                        "description": "Senha do usuário"
                                    }
                                },
                                "example": {
                                    "email": "teste@email.com",
                                    "password": "123456"
                                }
                            }
                        }                                                          
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "aplication/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "description": "acess-token do usuário"                                            
                                        },
                                        "refreshToken": {
                                            "type": "string",
                                            "description": "refresh-token do usuário"                                            
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "E-mail ou senha inválido"                    
                    }
                }                
            }
        },
        "/auth/refresh":{
            "post": {                
                "tags": ["Auth"],
                "summary": "Generate refresh-token",
                "requestBody": {
                    "description": "Gerar o refresh-token",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {                                
                                "properties": {
                                    "refreshToken": {
                                        "type": "string",
                                        "description": "refresh-token"                                            
                                    }
                                }
                            }
                        }                                                          
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "aplication/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "description": "refresh-token do usuário"                                            
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro Inesperado"                    
                    }
                }                
            }
        },
        "/hotel/quartos": {
            "post": {
                "tags": ["Hotel"],
                "summary": "Criação de Quartos",
                "requestBody": {
                    "description": "Informações do Quarto",
                    "required": true,
                    "content": {
                        "aplication/json": {                            
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "tipo_quarto": {
                                        "type": "string",
                                        "description": "Tipo do quarto (ex: Standart, Premium, Deluxe)"                                        
                                    },
                                    "numero_quarto": {
                                        "type": "integer",
                                        "description": "Tipo do quarto a ser reservado (ex:Standart, Premium, Deluxe)"                                            
                                    }
                                }
                            }
                        }
                    }
                },                
                "responses": {
                    "201": {
                        "description": "OK",
                        "content": {
                            "aplication/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "description": "Id do quarto"                                            
                                        },
                                        "numero_pessoas": {
                                            "type": "boolean",
                                            "description": "Numero de pessoas no quarto"                                            
                                        },
                                        "disponibilidade": {
                                            "type": "string",
                                            "description": "Disponibilidade do quarto"                                            
                                        },
                                        "numero_quarto": {
                                            "type": "integer",
                                            "description": "Numero do quarto"                                            
                                        },
                                        "tipo_quarto": {
                                            "type": "string",
                                            "description": "Tipo do quarto"                                            
                                        },
                                        "updatedAt": {
                                            "type": "string",
                                            "description": "Data de update"                                            
                                        },
                                        "createdAt": {
                                            "type": "string",
                                            "description": "Data de criação"                                            
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Quarto já cadastrado"                    
                    }
                }
            } 
        },
        "/hotels/checkin": {
            "post": {
                "tags": ["Hotel"],
                "summary": "Rota de Check-in",
                "requestBody": {
                    "description": "Token de Check-in",
                    "required": true,
                    "content": {
                        "aplication/json": {                            
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "token": {
                                        "type": "string",
                                        "description": "Token de Check-in"                                        
                                    }
                                }
                            }
                        }
                    }
                },                
                "responses": {
                    "201": {
                        "description": "OK",
                        "content": {
                            "aplication/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "description": "Token de Check-out"                                            
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "O token expirou"                    
                    }
                }
            } 
        },
        "/hotels/checkout": {
            "post": {
                "tags": ["Hotel"],
                "summary": "Rota de Check-out",
                "requestBody": {
                    "description": "Token de Check-out",
                    "required": true,
                    "content": {
                        "aplication/json": {                            
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "token": {
                                        "type": "string",
                                        "description": "Token de Check-out"                                        
                                    }
                                }
                            }
                        }
                    }
                },                
                "responses": {
                    "201": {
                        "description": "OK",
                        "content": {
                            "aplication/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "text": {
                                            "type": "string",
                                            "description": "Check-out"                                            
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "O token expirou"                    
                    }
                }
            } 
        }
    }
}